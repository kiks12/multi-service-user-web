// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  userId      Int     @id @unique @default(autoincrement())
  accessToken String  @unique @db.VarChar(255)
  username    String? @unique @db.VarChar(50)
  email       String  @unique @db.VarChar(100)
  provider    String  @db.VarChar(20)
  image       String? @db.VarChar(255)
  cover       String? @db.VarChar(255)
  address     String? @db.VarChar(255)
  contact     String? @db.VarChar(255)

  shopName         String? @db.VarChar(255)
  skills           String? @db.VarChar(255)
  description      String? @db.VarChar(255)
  followers        Int
  likes            Int
  verifiedProvider Boolean

  firstLogin         Boolean
  firstProviderLogin Boolean
  Services           Services[]
  Images             Images[]
}

model Services {
  serviceId      Int      @id @unique @default(autoincrement())
  user           Users    @relation(fields: [userId], references: [userId])
  userId         Int
  title          String   @db.VarChar(255)
  serviceDetails String   @db.VarChar(255)
  category       String   @db.VarChar(255)
  status         String   @db.VarChar(10)
  priceType      String   @db.VarChar(15)
  priceInitial   Int
  priceFinal     Int?
  dislikes       Int
  likes          Int
  ratings        Float
  Images         Images[]
}

model Images {
  imageId   Int      @id @unique @default(autoincrement())
  user      Users    @relation(fields: [userId], references: [userId])
  userId    Int
  service   Services @relation(fields: [serviceId], references: [serviceId])
  serviceId Int
  name      String
  path      String   @unique
}
